{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block body %}
<link rel="stylesheet" href="/assets/stylesheets/register.css">

<div class="register-wrapper">
    <div class="register-header">
        <h1 class="register-header-title">Register</h1>
    </div>
    <div class="informations-container">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" class="username-input" placeholder="Username">
    </div>
    <div class="informations-container">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" class="email-input" placeholder="Email">
    </div>
    <div class="informations-container">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="password-input" placeholder="Password">
    </div>
    <div class="informations-container">
        <label for="password-confirm">Confirm Password</label>
        <input type="password" id="password-confirm" name="password-confirm" class="password-confirm-input" placeholder="Confirm Password">
    </div>
    <div class="register-button-container">
        <button class="register-button">Register</button>
    </div>
    <div class="login-link-container">
        <a href="" class="login-link">Already have an account? Login</a>
    </div>
</div>
{% endblock %}