{# templates/registration/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<link rel="stylesheet" href="/assets/stylesheets/register.css">

<div class="register-wrapper">
    <div class="register-header">
        <h1 class="register-header-title">S'enregistrer</h1>
    </div>
    {{ form_start(registrationForm) }}
    <div class="form-group">
        {{ form_label(registrationForm.nomUtil) }}
        {{ form_widget(registrationForm.nomUtil) }}
        {{ form_errors(registrationForm.nomUtil) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.prenomUtil) }}
        {{ form_widget(registrationForm.prenomUtil) }}
        {{ form_errors(registrationForm.prenomUtil) }}
    </div>
    <div class="form-group">
        {{ form_label(registrationForm.emailUtil) }}
        {{ form_widget(registrationForm.emailUtil) }}
        {{ form_errors(registrationForm.emailUtil) }}
    </div>
    <div class="form-group">
        {{ form_widget(registrationForm.plainPassword) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>
    <button type="submit" class="form-submit">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}
