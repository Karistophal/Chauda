{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<link rel="stylesheet" href="/assets/stylesheets/login.css">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="login-wrapper">
        <div class="login-header">
            <h1 class="login-header-title">Se connecter</h1>
        </div>
        <div class="form-group">
            <label for="inputEmailUtil" class="form-label">Email :</label>
            <input type="email" value="{{ last_username }}" name="emailUtil" id="inputEmailUtil" class="form-input" autocomplete="email" required autofocus>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="form-label">Mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
        </div>
        {% if app.session.flashbag.has('error') %}
            <div class="alert alert-danger">{{ app.session.flashbag.get('error')|first }}</div>
        {% endif %}
        <button class="form-submit" type="submit">
            Se connecter
        </button>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    
</form>
{% endblock %}
