{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

<link rel="stylesheet" href="/assets/stylesheets/login.css">
<form method="post">
    <div class="login-wrapper">
        <div class="login-container">
            <div class="login-header">
                <h1 class="login-header-title">Se connecter</h1>
            </div>
            <div class="form-group">
                <label for="inputEmailUtil" class="form-label">Email :</label>
                <input type="email" value="{{ last_username }}" name="emailUtil" id="inputEmailUtil" class="form-input" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="form-label">Mot de passe :</label>
                <input type="password" name="password" id="inputPassword" class="form-input" autocomplete="current-password" required>
            </div>
            <a class="form-already" href="{{ path('register') }}">Vous n'avez pas de compte ?</a>
            {% if error %}
                <div class="form-error">â€¢ Le couple identifiant mot de passe est invalide.</div>
            {% endif %}
            <div class="form-remember">
            
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </div>
            {% if app.session.flashbag.has('error') %}
                <div class="alert alert-danger">{{ app.session.flashbag.get('error')|first }}</div>
            {% endif %}
            <button class="form-submit" type="submit">
                Se connecter
            </button>
        </div>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
</form>

{% endblock %}
