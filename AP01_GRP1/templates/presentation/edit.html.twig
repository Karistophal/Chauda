{% extends 'base.html.twig' %}

{% block title %}Édition de la Présentation{% endblock %}
{% block body %}
<link rel="stylesheet" href="/assets/stylesheets/presentation.css">
<body>

{% if app.user and app.user.droitUtil == 1 %}
    <form method="post" action="{{ path('app_presentation_edit') }}">
        {{ form_start(form) }}
        <div class="introduction-wrapper">
            <h1 class="introduction-title">Édition de la Présentation</h1>
            <div class="introduction-container">
                {{ form_row(form.textePresentation) }}
            </div>
        </div>
        <div class="cards-wrapper">
            <div class="card-content">
                <div class="card-circle">
                    <img src="/assets/img/presentation/experience.png" alt="experience" class="card-img-experience">
                </div>
                <div class="card-text-container">
                    <h2 class="card-title">EXPÉRIENCE</h2>
                        {{ form_row(form.experienceText) }}
                </div>
            </div>
            <div class="card-content">
                <div class="card-circle">
                    <img src="/assets/img/presentation/experience.png" alt="experience" class="card-img-experience">
                </div>
                <div class="card-text-container">
                    <h2 class="card-title">COMPÉTENCES</h2>
                    <div class="card-text-container">
                        {{ form_row(form.skillsText) }}
                    </div>
                </div>
            </div>
            <div class="card-content">
                <div class="card-circle">
                    <img src="/assets/img/presentation/experience.png" alt="experience" class="card-img-experience">
                </div>
                <div class="card-text-container">
                    <h2 class="card-title">CERTIFICATIONS</h2>
                    <div class="card-text-container">
                        {{ form_row(form.certificationsText) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="map-iframe">
            <div class="map-iframe-container">
                <img src="/assets/img/presentation/localisation.png" alt="localisation" class="localisation-img">
                <h2 class="map-title">Où me trouver ?</h2>
            </div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d83606.90471166083!2d1.400340121875896!3d49.092041225521804!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e6cbdd7d3ddcb1%3A0xeb9fd94417956f9a!2sVernon!5e0!3m2!1sfr!2sfr!4v1695418550605!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <button type="submit" class="submit-button">Enregistrer</button>
        {{ form_end(form) }}
    </form>
{% else %}
    <p>Vous n'avez pas le droit de modifier la présentation.</p>
{% endif %}
</body>
{% endblock %}
    